@model Service

   <!--CSS bootstrap stylesheet-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

     <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="Service" asp-action="Index">Service Index</a></li>
        <li class="breadcrumb-item active" aria-current="page">Delete Service</li>
    </ol>
</nav>
    
<h3 class="mt-4 mb-4">Delete Service</h3>

<h4 class="mb-4">Are you sure you want to delete this Service?</h4>

    <div>   
    <!-- display the service using a <dl> as per Details.cshtml -->
    <dl class="row">
    <dt class="col-sm-3">Serviced By</dt>
    <dd class="col-sm-9">@Model.StaffMember</dd>
    
    <dt class="col-sm-3">Date</dt>
    <dd class="col-sm-9">@Model.DateofService</dd>
    
    <dt class="col-sm-3">Description</dt>
    <dd class="col-sm-9">@Model.ServiceProvided</dd>
    
    <dt class="col-sm-3">Cost</dt>
    <dd class="col-sm-9">@Model.Cost</dd>

    <dt class="col-sm-3">Mileage</dt>
    <dd class="col-sm-9">@Model.Mileage</dd>
    </div>

    <!-- Post submit details with icons-->
    <div>
       <form asp-action="DeleteConfirm" method="POST">
        <input type="hidden" name="Id" value=@Model.Id />
        
            <div class="form-group">
            <button type="submit"  class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-trash "></span> Delete Service</button>
            <a class="btn btn-secondary btn-sm" asp-controller="Vehicle" asp-action="Details"><span class="glyphicon glyphicon-remove "></span> Cancel</a>
        </form>
