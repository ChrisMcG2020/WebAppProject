@model Vehicle

    <!--CSS bootstrap stylesheet-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

     <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="Vehicle" asp-action="Index">Vehicle Index</a></li>
        <li class="breadcrumb-item active" aria-current="page">Add Vehicle</li>
    </ol>
</nav>

<h3 class="mt-4 mb-4">Add New Vehicle</h3>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- add the Inputs for the Vehicle group -->
    <div class="row">
    <div class="form-group col-5">
        <label asp-for="Make" class="control-label">Make</label>
        <input asp-for="Make" class="form-control"/>
        <span asp-validation-for="Make" class="text-danger"></span>
    </div>
   </div>

    <div class="row">
    <div class="form-group col-5">
        <label asp-for="Model" class="control-label">Model</label>
        <input asp-for="Model" class="form-control"/>
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    </div>

    <div class="row">
        <div class="form-group col-2">
            <label asp-for="RegNumber" class="control-label">Registration Number</label>
            <input asp-for="RegNumber" class="form-control"/>
            <span asp-validation-for="RegNumber" class="text-danger"></span>
        </div>
        
        
       
        <div class="form-group col-4">
            <label asp-for="DateOfRegistration" class="control-label">Date Of Registration</label>
            <input asp-for="DateOfRegistration" class="form-control"/>
            <span asp-validation-for="DateOfRegistration" class="text-danger"></span>
        </div>
        </div>
        
    
        <!--Add some Select options for Transmission,Fuel Type, Body Type -->

        <div class="row">
        <div class="form-group col-2">
            <label asp-for="Transmission" class="control-label">Transmission</label>
            <select asp-for="Transmission" class="form-control">
            <option value="Manual">Manual</option>
            <option value="Automatic">Automatic</option>
            </select>
        </div>
        

       
        <div class="form-group col-2">
            <label asp-for="Co2Rating" class="control-label">Co2 Rating</label>
            <input asp-for="Co2Rating" class="form-control"/>
            <span asp-validation-for="Co2Rating" class="text-danger"></span>
        </div>
     

        
        <div class="form-group col-2">
            <label asp-for="FuelType" class="control-label">Fuel Type</label>
            <select asp-for="FuelType" class="form-control">
                <option value="Petrol">Petrol</option>
                <option value="Diesel">Diesel</option>
                <option value="Electric">Electric</option>
                <option value="Hybrid">Hybrid</option>
            </select>
        </div>
        </div>

        <div class="row">
        <div class="form-group col-2">
            <label asp-for="BodyType" class="control-label">Body Type</label>
            <select asp-for="BodyType" class="form-control">
                <option value="Hatchback">Hatchback</option>
                <option value="SUV">SUV</option>
                <option value="Coupe">Coupe</option>
                <option value="Saloon">Saloon</option>
                <option value="Estate">Estate</option>
            </select>
        </div>
    

        
        <div class="form-group col-2">
            <label asp-for="NoOfDoors" class="control-label">Number Of Doors</label>
            <input asp-for="NoOfDoors" class="form-control"/>
            <span asp-validation-for="NoOfDoors" class="text-danger"></span>
        </div>
        </div>

        <div class="row">
        <div class="form-group col-8">
            <label asp-for="PhotoURL" class="control-label">Photo URL</label>
            <input asp-for="PhotoURL" class="form-control"/>
            <span asp-validation-for="PhotoURL" class="text-danger"></span>
        </div>
        </div>


    <!-- Post submit details with icons-->
    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-plus "></span> Add Vehicle</button>
        <a class="btn btn-secondary btn-sm" asp-asp-controller="" asp-action="Index"><span class="glyphicon glyphicon-remove "></span> Cancel</a>
</div>
    </div>

      </form>




