
 @model IEnumerable<VMS.Data.Models.Vehicle>

@{
    ViewData["Title"] = "Vehicle";
}
    <!--CSS bootstrap stylesheet-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
   
    <!--Breadcrumb Menu-->
    <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Vehicle Index</li>
    </ol>
</nav>

<h3>Vehicle List</h3>

   <!-- add an action link styled as a button to navigate to Create Action -->
     <div class="mb-2">
      <a asp-action="Create"  class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-plus "></span> Add Vehicle</a>
    </div>

<!--Table to show Car Details-->
<table class="table">
    <thead>
        <tr>
            <!--Implement our View Bag, this will add a hyperlink to the columh heading to enable user to click and change the order to the defined order-->
            <th><a asp-action="Index" asp-route-sortOrder="@ViewBag.MakeSortParm">Make</a></th>
            <th>Model</th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewBag.DateSortParm">Year</a></th>
            <th>Engine CC</th>
            <th>Transmission</th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewBag.FuelSortParm">Fuel Type</a></th>
        </tr>
    </thead>
    <tbody>

     
        @foreach(var s in Model) {
        
            <tr>
                
                @*Add the html links to display the order*@
                <td>@Html.DisplayFor(modelItem => s.Make)</td>
                <td>@s.Model</td>
                <td>@Html.DisplayFor(modelItem => s.DateOfRegistration.Year)</td>
                <td>@s.EngineCC</td>
                <td>@s.Transmission</td>
                <td>@Html.DisplayFor(modelItem => s.FuelType)</td>
                
               
           @*  Some icons to view,edit and delete the information and use bootstrap tooltip so 
               when cursor hovers it shows user the text of the icon *@
            <td><a asp-action="Details" asp-route-id=@s.Id data-toggle="tooltip" title="View Details" /><span class="glyphicon glyphicon-eye-open"></span>|
              <a asp-action="Edit" asp-route-id=@s.Id data-toggle="tooltip" title="Edit" /> <span class="glyphicon glyphicon-edit"></span>| 
                <a asp-action="Delete" asp-route-id=@s.Id data-toggle="tooltip" title="Delete"/><span class="glyphicon glyphicon-trash"></span>
              </td>
            </tr>
        }
    </tbody>
</table>




